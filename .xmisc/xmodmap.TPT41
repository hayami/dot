!
! ThinkPad T41
! - Swap Caps_Lock and Control_R
! - Alt_L is Meta_L
!
pointer     = 1 3 2 4 5 6 7 8 9 10
keycode  64 = Meta_L
keycode  66 = Control_R
keycode 109 = Caps_Lock
keycode 125 =
keycode 156 =

clear Lock
add Lock = Caps_Lock

clear Control
add Control = Control_L Control_R

clear Mod1
add Mod1 = Alt_R

clear Mod3
add Mod3 = Meta_L

clear Mod4
