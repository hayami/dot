!
! ThinkPad R32
! - Swap Caps_Lock and Control_R
! - Alt_R is Meta_R
!
pointer     = 1 3 2 4 5
keycode  66 = Control_R
keycode 109 = Caps_Lock
keycode 113 = Meta_R

clear Lock
add Lock = Caps_Lock

clear Control
add Control = Control_L Control_R

clear Mod1
add Mod1 = Alt_L

clear Mod3
add Mod3 = Meta_R
